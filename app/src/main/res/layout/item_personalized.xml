<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/width_60"
        android:layout_height="@dimen/height_60"
        android:padding="@dimen/padding_18"
        android:scaleType="centerInside"
        android:layout_marginTop="@dimen/margin_top_20"
        android:background="@drawable/personalized_shape"
        android:contentDescription="@string/personalized_item_image_desc"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_10"
        android:layout_marginStart="@dimen/padding_18"
        android:layout_marginBottom="@dimen/margin_top_20"
        android:ellipsize="end"
        android:text="@string/personalized_item"/>
</LinearLayout>